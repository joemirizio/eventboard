<%= form_for @event do |f| %>

	<% if @event and @event.errors.any? %>
		<div class='errors'>
			<p>There were <%= pluralize(@event.errors.count, 'error') %></p>
			<ul>
				<% @event.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<%= f.label :name %>
	<%= f.text_field :name, class: 'input-block-level' %>

	<%= f.label :description %>
	<%= f.text_area :description, class: 'input-block-level' %>

	<br />
	<br />
	<%= f.submit submit_label, class: 'button button-block' %>
	<%= link_to 'Cancel', events_path, class: 'button button-block button-cancel' %>
<% end %>
